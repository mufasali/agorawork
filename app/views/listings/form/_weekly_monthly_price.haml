    = form.label :monthly_price, t(".monthly_price")
    = form.text_field :monthly_price, :class => "price-field", :maxlength => "10", :placeholder => "0", :value => (@listing.monthly_price ? @listing.monthly_price.to_s: 0)
    = render partial: "listings/form/price_currency", locals: {form: form}
    .quantity-description
      = t(".per")
      = t(".month")      
